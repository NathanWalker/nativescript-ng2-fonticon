{
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "types": [
            "hammerjs",
            "jasmine",
            "node"
        ],
        "lib": ["es2015", "dom"]
    },
    "files": [
        "./references.d.ts",
        "nativescript-ngx-fonticon.ts",
        "./src/app/pipes/fonticon.pipe.ts",
        "./src/app/services/fonticon.service.ts"
    ],
    "exclude": [
        "node_modules",
        "src/node_modules",
        "bundles"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}